{
  "connection": "default",
  "collectionName": "card",
  "info": {
    "name": "card",
    "description": "basic card for displaying information"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "front_text": {
      "type": "string"
    },
    "back_text": {
      "type": "string"
    },
    "devotional": {
      "type": "text"
    },
    "decks": {
      "collection": "deck",
      "via": "cards"
    },
    "notes": {
      "collection": "note",
      "via": "card",
      "dominant": true
    },
    "conjugations": {
      "collection": "conjugation",
      "via": "card",
      "dominant": true
    },
    "translations": {
      "collection": "translation",
      "via": "cards"
    },
    "owner": {
      "model": "user",
      "via": "owned_cards",
      "plugin": "users-permissions"
    },
    "part_of_speech": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "person": {
      "type": "string"
    },
    "noted_scripture": {
      "type": "string"
    },
    "video_link": {
      "type": "string"
    },
    "pronunciation": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "number_of_occurances": {
      "type": "integer"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "number": {
      "type": "integer"
    },
    "tense": {
      "type": "string"
    }
  }
}