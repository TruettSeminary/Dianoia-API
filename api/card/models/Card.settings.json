{
  "connection": "default",
  "collectionName": "card",
  "info": {
    "name": "card",
    "description": "basic card for displaying information"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "front_text": {
      "type": "string"
    },
    "back_text": {
      "type": "string"
    },
    "devotional_thought": {
      "type": "text"
    },
    "decks": {
      "collection": "deck",
      "via": "cards"
    },
    "notes": {
      "collection": "note",
      "via": "card",
      "dominant": true
    },
    "conjugations": {
      "collection": "conjugation",
      "via": "card",
      "dominant": true
    },
    "translations": {
      "collection": "translation",
      "via": "cards"
    },
    "test_json": {
      "type": "json"
    },
    "owner": {
      "model": "user",
      "via": "owned_cards",
      "plugin": "users-permissions"
    }
  }
}