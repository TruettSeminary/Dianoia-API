{
  "routes": [
    {
      "method": "GET",
      "path": "/note",
      "handler": "Note.find",
      "config": {
        "policies": [], 
        "myConfig": true
      }
    },
    {
      "method": "GET",
      "path": "/note/count",
      "handler": "Note.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/note/:_id",
      "handler": "Note.findOne",
      "config": {
        "policies": ["isNoteOwner"]
      }
    },
    {
      "method": "POST",
      "path": "/note",
      "handler": "Note.create",
      "config": {
        "policies": ["validateNewNote"]
      }
    },
    {
      "method": "PUT",
      "path": "/note/:_id",
      "handler": "Note.update",
      "config": {
        "policies": ["isNoteOwner"]
      }
    },
    {
      "method": "DELETE",
      "path": "/note/:_id",
      "handler": "Note.destroy",
      "config": {
        "policies": []
      }
    }
  ]
}
